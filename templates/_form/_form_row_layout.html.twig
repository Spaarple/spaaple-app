{%- block form_row -%}
    {%- if compound is defined and compound -%}
        {%- set element = 'fieldset' -%}
    {%- endif -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
    {%- endif -%}
    {%- set row_class = row_class|default(row_attr.class|default('mb-5')|trim) -%}
    {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    <{{ element|default('div') }}{% with {attr: row_attr|merge({class: row_class})} %}{{ block('attributes') }}{% endwith %}>
    {%- if 'form-floating' in row_class -%}
        {{- form_widget(form, widget_attr|merge({attr: {'class': 'block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-darkness-500 placeholder:text-gray-500 p-4 focus:rounded-lg focus:outline-none focus:ring-1 focus:ring-darkness-500 focus:ring-opacity-50 sm:text-sm sm:leading-6'}})) -}}
        {{- form_label(form) -}}
    {%- else -%}
    {%- endif -%}
    {{- form_help(form) -}}
    {{- form_errors(form) -}}
    {{- form_label(form) -}}
    {{- form_widget(form, widget_attr|merge({attr: {'class': 'block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-darkness-500 placeholder:text-gray-500 p-4 focus:rounded-lg focus:outline-none focus:ring-1 focus:ring-darkness-500 focus:ring-opacity-50 sm:text-sm sm:leading-6'}})) -}}
    </{{ element|default('div') }}>
{%- endblock form_row %}