<div class="grid grid-cols-6 gap-4">
    <div class="col-start-2 col-span-4">
        <div class="flex min-h-full flex-col justify-center mt-20">
            <div class="space-y-12">
                <div class="border-b border-gray-900/10 pb-12 text-center">
                    <h1 class="lg:text-display-1xl md:text-display-xl text-display-md font-semibold pb-10">
                        Prenons contact
                    </h1>
                    <p class="mt-1 text-sm leading-6 text-gray-600">
                        Remplissez ce formulaire pour nous contacter. Nous vous répondrons dans les plus brefs délais.
                    </p>
                </div>
            </div>
            <div class="mt-10 sm:mx-auto sm:w-full">
                {{ form_start(form, {'action': path('app_contact_index')}) }}
                {{ form_row(form.email) }}
                {{ form_row(form.who) }}
                {{ form_row(form.message) }}
                <div class="flex flex-col items-center mb-20">
                    <button type="submit" class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                        py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Prendre contact
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>