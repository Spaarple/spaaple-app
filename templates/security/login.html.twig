{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 mt-20">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h1 class="mt-10 text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">
                Connexion a votre compte
            </h1>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" method="POST" autocomplete="off">
                <div>
                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Adresse email</label>
                    <div class="mt-2">
                        <input id="email"
                               name="email"
                               type="email"
                               autocomplete="email"
                               required
                               placeholder="Adresse email"
                               class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm
                                ring-1 ring-inset ring-darkness-500
                                placeholder:text-gray-500 p-4
                                focus:rounded-lg focus:outline-none focus:ring-1 focus:ring-darkness-500 focus:ring-opacity-50
                                sm:text-sm sm:leading-6"
                        >
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Mot de passe</label>
                        <div class="text-sm">
                            <a href="{{ path('app_forgot_password_request') }}"
                               class="font-semibold text-indigo-600 hover:text-indigo-500">
                                Mot de passe oubli√© ?
                            </a>
                        </div>
                    </div>
                    <div class="mt-2">
                        <input id="password"
                               name="password"
                               type="password"
                               autocomplete="current-password"
                               required
                               placeholder="Mot de passe"
                               class="block w-full rounded-lg border-0 py-1.5 text-gray-900 shadow-sm
                                ring-1 ring-inset ring-darkness-500
                                placeholder:text-gray-500 p-4
                                focus:rounded-lg focus:outline-none focus:ring-1 focus:ring-darkness-500
                                focus:ring-opacity-50
                                sm:text-sm sm:leading-6">
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div>
                    <button type="submit"
                            class="hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                            py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Connexion
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}