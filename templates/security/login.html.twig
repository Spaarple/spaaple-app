{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8 mt-20">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h1 class="mt-10 text-center text-3xl font-bold leading-9 tracking-tight text-gray-900">
                Connexion a votre compte
            </h1>
        </div>
        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" method="POST" autocomplete="off">
                <div class="mb-5">
                    <label for="email"
                           class="block mb-2 text-sm font-medium text-gray-900 dark:text-white required">Adresse Email</label>
                    <input type="email"
                           id="email"
                           name="email"
                           value="{{ last_username }}"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                           focus:ring-neutral-900 focus:border-darkness-500 block w-full p-2.5 dark:bg-gray-700
                           dark:border-gray-600 dark:placeholder-gray-400 dark:text-white
                           dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           placeholder="contact@gmail.com"
                           required />
                </div>
                <div class="mb-5">
                    <div class="flex items-center justify-between">
                        <label for="password" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white required">Mot de passe</label>
                        <div class="text-sm">
                            <a href="{{ path('app_forgot_password_request') }}"
                               class="font-semibold text-darkness-500 hover:text-darkness-500">
                                Mot de passe oubli√© ?
                            </a>
                        </div>
                    </div>
                    <input type="password"
                           id="password"
                           placeholder="Mot de passe"
                           name="password"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg
                           focus:ring-neutral-900 focus:border-darkness-500 block w-full p-2.5 dark:bg-gray-700
                           dark:border-gray-600 dark:placeholder-gray-400 dark:text-white
                           dark:focus:ring-blue-500 dark:focus:border-blue-500"
                           required />
                </div>
                <div class="flex items-start mb-5">
                    <div class="flex items-center h-5">
                        <input id="remember"
                               type="checkbox"
                               value=""
                               class="w-4 h-4 text-darkness-500 bg-gray-100 border-gray-300 rounded
                               focus:ring-darkness-500
                               dark:focus:ring-purple-600
                               dark:ring-offset-gray-800 focus:ring-2
                               dark:bg-gray-700
                               dark:border-gray-600">
                    </div>
                    <label for="remember" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Se Souvenir de moi</label>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit"
                        class="hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                                py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}