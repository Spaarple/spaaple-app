{% extends 'base.html.twig' %}

{% block title %}Spaarple - Nous contacter{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-3 xl:gap-4 dark:bg-gray-900 sm:m-20 mt-20">
        <div class="mb-4 col-span-full xl:mb-2">
            <div class="flex flex-col sm:flex-row justify-between items-center">
                <h1 class="lg:text-display-1xl text-display-md font-semibold mb-4 sm:mb-0">Nous contacter</h1>
                <div class="flex justify-around space-x-4">
                    <a href="{{ path('app_profile_index') }}" class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-700 text-body-sm font-semibold text-white bg-neutral-700
            py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Retour
                    </a>
                </div>
            </div>
        </div>
        <div class="col-span-full order-1">
            <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <h3 class="mb-4 text-xl font-semibold dark:text-white">
                    Dites-nous tout !
                </h3>
                <div>
                    {{ form_start(form) }}
                        {{ form_row(form.message) }}
                    <div class="flex flex-col items-center mb-20">
                        <button class="transform hover:scale-110 transition-transform duration-200 hover:bg-success text-body-sm font-semibold text-white bg-neutral-900
                           py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                            Envoyer le message
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

