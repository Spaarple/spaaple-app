{% extends 'base.html.twig' %}

{% block title %}Spaarple - Profil{% endblock %}

{% block body %}
    <div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-3 xl:gap-4 dark:bg-gray-900 sm:m-20 mt-20">
        <div class="mb-4 col-span-full xl:mb-2">
            <div class="flex flex-col sm:flex-row justify-between items-center">
                <h1 class="lg:text-display-1xl text-display-md font-semibold mb-4 sm:mb-0">Mon compte</h1>
                <div class="flex justify-around space-x-4">
                    <a href="{{ path('app_contact_profile_index') }}"
                       class="transform hover:scale-110 transition-transform duration-200 hover:bg-info text-body-sm font-semibold text-white bg-info
                    py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Nous contacter
                    </a>
                    <a href="{{ path('app_logout') }}" class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-700 text-body-sm font-semibold text-white bg-neutral-700
            py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Se déconnecter
                    </a>
                </div>
            </div>
        </div>
        <div class="col-span-full xl:col-auto order-2 sm:order-1">
            <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <h3 class="mb-4 text-xl font-semibold dark:text-white">Cliquez sur l'une des options ci-dessous pour accéder rapidement à ce que vous cherchez.</h3>
                <div class="col-span-6 sm:col-full space-y-2">
                    <a href="{{ path('app_profile_your_estimate') }}" class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                        py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Consulter mes estimations
                    </a>
                    <a href="{{ path('app_estimate_index') }}" class="transform hover:scale-110 transition-transform duration-200 hover:bg-neutral-800 text-body-sm font-semibold text-white bg-neutral-900
                        py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                        Effectuer une nouvelle estimation
                    </a>
                </div>
            </div>
            <button class="transform hover:scale-110 transition-transform duration-200 hover:bg-danger text-body-sm font-semibold text-white bg-danger
                    py-4 pl-5 pr-4 mb-4 rounded-full flex flex-row gap-2 items-center justify-center">
                Supprimer mon compte.
            </button>
        </div>
        <div class="col-span-2 order-1">
            <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-sm 2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800">
                <h3 class="mb-4 text-xl font-semibold dark:text-white">
                    Informations générales
                </h3>
                <div>
                    {{ form_start(form) }}
                    <div class="grid gap-6 mb-6 md:grid-cols-2">
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-span-6 sm:col-full">
                        <button class="transform hover:scale-110 transition-transform duration-200 hover:bg-success text-body-sm font-semibold text-white bg-neutral-900
                                py-4 pl-5 pr-4 rounded-full flex flex-row gap-2 items-center justify-center">
                            Modifier les informations.
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            {{ render(controller('App\\Controller\\ProfileController::changePassword')) }}
        </div>
    </div>

{% endblock %}

